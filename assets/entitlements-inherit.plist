<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow unsigned executable memory for helper processes -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Disable library validation for helper processes -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Temporary exception for sending Apple events -->
    <key>com.apple.security.temporary-exception.apple-events</key>
    <true/>

    <!-- Network Client Capability -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Helper binaries usually don't require camera or microphone access -->
    <!-- Remove if necessary -->

    <!-- Screen Recording Capability -->
    <key>com.apple.security.screen-recording</key>
    <true/>
</dict>
</plist>