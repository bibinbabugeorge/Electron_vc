{
  "main": "main.js",
  "name": "AppsConnect",
  "version": "1.0.1",
  "description": "AppsConnect",
  "author": "Appsteam Technologies",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.appsteam.appsconnect",
    "productName": "AppsConnect",
    "files": [
      "assets/**", 
      "dist/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json",
      "preload.js",
      "confieranceroom.html",
      "confieranceroom.js",
      "create_group.html",
      "CreateGroup.js",
      "dashboard.html",
      "dashboard.js",
      "edit_group.html",
      "EditGroup.js",
      "forgot-password.html",
      "guest_lobby.html",
      "guest_lobby.js",
      "help-feedback.html",
      "index.html",
      "index.js",
      "Join.html",
      "Join.js",
      "main.js",
      "RepoClient.js",
      "reset-password.html",
      "RoomClient.js",
      "schedule_meeting.html",
      "schedule_meeting.js",
      "signup.html",
      "splash.html",
      "style.css",
      "WaitingRoom.html",
      "bundle.js",
      "notification.html",
      "modules/**/*"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://vps271818.vps.ovh.ca:3024/executables/"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./assets/appsconnect_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "license": "./assets/LICENSE.txt",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "identity": "Apple Development: app@appsteantechnologies.com",
      "target": [
        "dmg"
      ],
      "icon": "./assets/appsconnect_icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "background": "./assets/appsconnect_background.png",
      "icon": "./assets/appsconnect_icon.icns",
      "iconSize": 100,
      "window": {
        "width": 544,
        "height": 408
      },
      "contents": [
        {
          "x": 145,
          "y": 255
        },
        {
          "x": 400,
          "y": 255,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "./assets/appsconnect_icon.png",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-auto-launch": "^5.0.7",
    "electron-updater": "^6.3.9"
  }
}